<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_apka2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.kotynski.kamil.aplikacja2.Apka2">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="136dp"
                    app:srcCompat="@drawable/yenvelope"
                    android:id="@+id/imageButton4"
                    android:scaleType="centerInside" />

                <TextView
                    android:text="SMS"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/textView3"
                    android:textSize="18sp"
                    android:gravity="center_horizontal" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageButton
                    android:layout_width="match_parent"
                    app:srcCompat="@drawable/ztrash"
                    android:id="@+id/imageButton13"
                    android:scaleType="centerInside"
                    android:layout_height="132dp" />

                <TextView
                    android:text="Skrzynka "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView5"
                    tools:gravity="center_horizontal"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageButton
                    android:layout_width="match_parent"
                    app:srcCompat="@drawable/ncalendar"
                    android:id="@+id/imageButton7"
                    android:scaleType="centerInside"
                    android:layout_height="132dp" />

                <TextView
                    android:text="Data"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView6"
                    android:gravity="center_horizontal"
                    android:textSize="18sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="132dp"
                    app:srcCompat="@drawable/ypencil"
                    android:id="@+id/imageButton9"
                    android:layout_weight="1"
                    android:scaleType="centerInside" />

                <TextView
                    android:text="Notatka"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView7"
                    android:gravity="center_horizontal"
                    android:layout_weight="3.45"
                    android:layout_gravity="center_horizontal"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="132dp"
                    app:srcCompat="@drawable/zlock"
                    android:id="@+id/imageButton11"
                    android:layout_weight="1"
                    android:scaleType="centerInside" />

                <TextView
                    android:text="Zablokuj"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView8"
                    android:layout_weight="3.50"
                    android:gravity="center_horizontal"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="132dp"
                    app:srcCompat="@drawable/nbar"
                    android:id="@+id/imageButton6"
                    android:layout_weight="1"
                    android:scaleType="centerInside" />

                <TextView
                    android:text="Info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView9"
                    android:layout_weight="4.50"
                    android:gravity="center_horizontal"
                    android:textSize="18sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="132dp"
                    app:srcCompat="@drawable/ysave"
                    android:id="@+id/imageButton10"
                    android:layout_weight="1"
                    android:scaleType="centerInside" />

                <TextView
                    android:text="Zapis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView10"
                    android:layout_weight="3.38"
                    android:gravity="center_horizontal"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="132dp"
                    app:srcCompat="@drawable/zoomout"
                    android:id="@+id/imageButton12"
                    android:layout_weight="1"
                    android:scaleType="centerInside" />

                <TextView
                    android:text="Wyszukaj"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView11"
                    android:layout_weight="3.50"
                    android:gravity="center_horizontal"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="132dp"
                    app:srcCompat="@drawable/npicture"
                    android:id="@+id/imageButton8"
                    android:layout_weight="1"
                    android:scaleType="centerInside" />

                <TextView
                    android:text="Obraz"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView12"
                    android:layout_weight="4"
                    android:textSize="18sp"
                    android:gravity="center_horizontal" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
